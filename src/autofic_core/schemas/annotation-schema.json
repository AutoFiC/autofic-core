{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "AutoFiC Annotation Schema",
    "type": "object",
    "required": ["file", "annotations"],
    "properties": {
      "file": {
        "type": "string",
        "description": "Source file path"
      },
      "annotations": {
        "type": "array",
        "items": {"$ref": "#/definitions/annotation"}
      }
    },
    "definitions": {
      "annotation": {
        "type": "object",
        "required": ["id", "range"],
        "properties": {
          "id": {"type": "string"},
          "range": {
            "type": "object",
            "required": ["start", "end"],
            "properties": {
              "start": {"type": "integer", "minimum": 1},
              "end": {"type": "integer", "minimum": 1}
            }
          },
          "message": {"type": "string"},
          "severity": {"type": "string"},
          "snippet": {"type": "string"},
          "bit": {
            "type": "object",
            "properties": {
              "trigger": {"type": ["string", "null"]},
              "steps": {"type": "array", "items": {"type": "string"}},
              "reproduction": {"type": ["string", "null"]},
              "bit_severity": {"type": ["string", "null"]}
            }
          },
          "tool": {"type": "string"},
          "confidence": {"type": "string"},
          "vulnerability_class": {"type": "array", "items": {"type": "string"}},
          "cwe": {"type": "array", "items": {"type": "string"}}
        }
      }
    }
}
